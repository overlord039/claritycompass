
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isCreatingOwnDoc(userId) {
      return isOwner(userId) && request.resource.data.id == userId;
    }

    function isCreatingOwnSubDoc(userId) {
      return isOwner(userId) && request.resource.data.userId == userId;
    }
    
    function isOwnerOf(doc) {
      return isSignedIn() && request.auth.uid == doc.userId;
    }

    // users/{uid}: Core user data, mostly immutable.
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create: if isCreatingOwnDoc(userId);
      // Only allow updating stage and onboarding status.
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isOwner(userId);
      allow list: if false;

      // tasks/{taskId}: User-specific tasks nested under the user.
      match /tasks/{taskId} {
        allow list, get: if isOwner(userId);
        allow create: if isCreatingOwnSubDoc(userId);
        allow update, delete: if isOwner(userId) && isOwnerOf(resource.data);
      }
      
      // shortlisted_universities/{universityId}: User's university choices nested under the user.
      match /shortlisted_universities/{universityId} {
        allow list, get: if isOwner(userId);
        allow create: if isCreatingOwnSubDoc(userId);
        allow update, delete: if isOwner(userId) && isOwnerOf(resource.data);
      }

      // sessions/{sessionId}: User-specific scheduled sessions.
      match /sessions/{sessionId} {
        allow list, get: if isOwner(userId);
        allow create: if isCreatingOwnSubDoc(userId);
        allow update, delete: if isOwner(userId) && isOwnerOf(resource.data);
      }
    }
    
    // profiles/{uid}: Detailed, user-editable profile data.
    match /profiles/{userId} {
      allow get, create, update: if isOwner(userId);
      allow delete: if isOwner(userId);
      allow list: if false;
    }

    // user_state/{uid}: App state like current stage and AI assessments.
    match /user_state/{userId} {
      allow get, create, update: if isOwner(userId);
      allow delete: if isOwner(userId);
      allow list: if false;
    }
    
    // universities_master/{universityId}: Public data, read-only for clients.
    match /universities_master/{universityId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }
  }
}
